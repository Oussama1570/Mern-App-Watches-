{
    "version": 2,
    "builds": [
      { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } },
      { "src": "backend/package.json", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "backend/server.js" },
      { "src": "/(.*)", "dest": "client/$1" }
    ]
  }
  